{
  "name": "@gibberlink/gateway",
  "version": "1.0.0",
  "description": "Gibberlink Decoder Gateway - HTTP/WebSocket server",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsup src/index.ts --format esm",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@gibberlink/audio-decoder": "workspace:*",
    "@gibberlink/englishizer": "workspace:*",
    "@gibberlink/protocol-core": "workspace:*",
    "@gibberlink/transports": "workspace:*",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "nanoid": "^5.0.4",
    "rate-limiter-flexible": "^4.0.1",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@types/ws": "^8.5.0",
    "supertest": "^6.3.3",
    "tsup": "^8.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "gibberlink",
    "gateway",
    "api",
    "websocket",
    "protocol"
  ],
  "author": "Juan Santos <baitjet@gmail.com>",
  "license": "AGPL-3.0"
}
