{
  "name": "@gibberlink/transports",
  "version": "1.0.0",
  "description": "Transport layer implementations for WebSocket, UDP, and Audio",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@gibberlink/protocol-core": "workspace:*",
    "ws": "^8.14.0",
    "dgram": "^1.0.1"
  },
  "devDependencies": {
    "@types/ws": "^8.5.0",
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "gibberlink",
    "transport",
    "websocket",
    "udp",
    "audio"
  ],
  "author": "Juan Santos <baitjet@gmail.com>",
  "license": "AGPL-3.0"
}
